import tkinter as tk
from tkinter import *
from tkinter import messagebox
#######################################
def ventana_inicio():
    ventana=tk.Tk()
    ventana.title("Login ")
    ventana.geometry("650x450")
    ventana.configure(background="grey")
    main_title = Label(text = "Bienvenidos a MyPetPro", font = ("Cambria", 14), bg = "#0074bd", fg = "black", width = "500", height = "2")
    main_title.pack()
    main_title1 = Label(text = "Lo mejor para tu mascota", font = ("Cambria", 14), bg = "grey", fg = "white", width = "500", height = "2")
    main_title1.pack()
    main_title2 = Label(text = "Te ayudaremos a que tenga una mejor calidad de vida", font = ("Cambria", 14), bg = "grey", fg = "white", width = "500", height = "2")
    main_title2.pack()
    main_title3 = Label(text = "Solo registrate ", font = ("Cambria", 14), bg = "grey", fg = "white", width = "500", height = "2")
    main_title3.pack()
    main_title4 = Label(text = "", font = ("Cambria", 14), bg = "grey", fg = "white", width = "500", height = "2")
    main_title4.pack()
    el=tk.Label(ventana,text="Por favor ingresa tu nombre:",bg="grey",fg="black")
    el.pack(padx=5,pady=5,ipadx=5,ipady=5)
    entrada1=tk.Entry(ventana)
    entrada1.pack(fill=tk.X,padx=5,pady=5,ipadx=5,ipady=5)

    boton=tk.Button(ventana,text="Siguiente",fg="blue",command=ventana.destroy)
    boton.pack(side=tk.TOP)

    ventana.mainloop()

ventana_inicio()
